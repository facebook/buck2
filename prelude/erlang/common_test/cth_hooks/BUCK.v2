erlang_application(
    name = "cth_hooks",
    srcs = glob([
        "src/*.erl",
        "src/*.hrl",
    ]),
    applications = [
        "kernel",
        "stdlib",
        "common_test",
    ],
    erl_opts = [
        "+debug_info",
        "+warnings_as_errors",
    ],
    shell_libs = [],
    use_global_parse_transforms = False,
    visibility = ["PUBLIC"],
)

