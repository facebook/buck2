cxx_library(
    name = "python-3.10",
    exported_linker_flags = [
        "-L{}".format("/usr/lib64"),
        "-lpython{}".format("3.10"),
    ],
    exported_preprocessor_flags = [
        "-isystem{}".format("/usr/include/python3.10"),
    ],
    visibility = ["PUBLIC"],
) if not host_info().os.is_windows else None
