load("@fbcode_macros//build_defs:cpp_binary.bzl", "cpp_binary")
load("@fbcode_macros//build_defs:cpp_library.bzl", "cpp_library")
load("@fbcode_macros//build_defs:rust_library.bzl", "rust_library")

cpp_binary(
    # @autodeps-skip
    name = "main",
    srcs = ["main.cpp"],
    deps = [":lib"],
)

cpp_library(
    # @autodeps-skip
    name = "lib",
    srcs = ["lib.cpp"],
    headers = ["lib.h"],
    exported_deps = [
        ":rust",  # rust implementation
        ":rust@header",  # c++ header
    ],
)

rust_library(
    name = "rust",
    srcs = ["lib.rs"],
    cxx_bridge = "lib.rs",
    deps = ["fbsource//third-party/rust:cxx"],
)
