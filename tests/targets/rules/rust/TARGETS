check_subtarget(
    name = "check_rust_bin_subtarget_expand",
    expected_out_filename = "proc_macro_main.rs",
    expected_out_tokens = [
        "#[macro_use]",
        "fn main",
    ],
    subtarget = "expand",
    target = ":proc_macro_main",
)

check_subtarget(
    name = "check_rust_lib_subtarget_expand",
    expected_out_filename = "proc_macro_lib.rs",
    expected_out_tokens = ["#[macro_use]"],
    subtarget = "expand",
    target = ":proc_macro_lib",
)
