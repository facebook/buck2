)

bzl_native.genrule(
    name = "generate_file",
    out = "coolfile.txt",
    bash = "echo \"C00l f!le\" > $OUT",
)

bzl_native.genrule(
    name = "generate_src",
    out = "lib.rs",
    bash = "echo \"pub fn generated_fn() {}\" > $OUT",
)

