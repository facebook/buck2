load("@prelude//:asserts.bzl", "asserts")

TEST_TARGET_PATH = "fbcode//buck2/tests/e2e/configurations/configuration_alias/test"

def _impl(ctx: bxl.Context):
    config = ctx.analysis(ctx.configured_targets(TEST_TARGET_PATH + ":config", modifiers = ctx.modifiers)).providers()
    on = ctx.analysis(ctx.configured_targets(TEST_TARGET_PATH + ":on", modifiers = ctx.modifiers)).providers()
    config_alias = ctx.analysis(ctx.configured_targets(TEST_TARGET_PATH + ":config_alias", modifiers = ctx.modifiers)).providers()
    on_alias = ctx.analysis(ctx.configured_targets(TEST_TARGET_PATH + ":on_alias", modifiers = ctx.modifiers)).providers()

    asserts.equals(config[ConstraintSettingInfo], config_alias[ConstraintSettingInfo])
    asserts.equals(on[ConstraintValueInfo], on_alias[ConstraintValueInfo])

    platform = ctx.analysis(ctx.configured_targets(TEST_TARGET_PATH + ":platform", modifiers = ctx.modifiers)).providers()

    asserts.equals(platform[PlatformInfo].configuration.constraints, {config[ConstraintSettingInfo].label: on[ConstraintValueInfo]})

test = bxl_main(
    cli_args = {},
    impl = _impl,
)
