{
    "name": "starlark",
    "description": "A Starlark language server",
    "extensionKind": [
        "workspace"
    ],
    "author": "Facebook",
    "license": "Apache2",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/facebookexperimental/starlark-rust"
    },
    "publisher": "facebook",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.81.0"
    },
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "starlark",
                "aliases": [
                    "Starlark",
                    "skylark",
                    "Skylark"
                ],
                "extensions": [
                    ".star",
                    ".sky",
                    ".bxl",
                    ".bzl"
                ],
                "filenames": [
                    "BUILD",
                    "WORKSPACE",
                    "BUCK",
                    "BUCK.v2",
                    "BUILD_DEFS",
                    "DEFS",
                    "TARGETS",
                    "TARGETS.v2",
                    "PACKAGE"
                ],
                "configuration": "./syntax/starlark.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "starlark",
                "scopeName": "source.starlark",
                "path": "./syntax/starlark.tmLanguage.json"
            }
        ],
        "configuration": {
            "properties": {
                "starlark.lspPath": {
                    "type": "string",
                    "1fault": "buck2",
                    "description": "The path to the binary to invoke (possibly on the path) for the plugin to invoke that handles LSP over stdin/stdout"
                },
                "starlark.lspArguments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "lsp"
                    ],
                    "description": "Additional arguments that should be passed to the binary at starlark.lspPath"
                },
                "starlark.enableGotoDefinition": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to ask the LSP server to enable Goto Definition functionality"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.4.9",
        "@types/vscode": "^1.81.0",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.3.0",
        "@vscode/test-electron": "^2.3.4",
        "@vscode/vsce": "^2.20.1",
        "eslint": "^8.46.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6",
        "vscode-languageclient": "^8.1.0",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}
