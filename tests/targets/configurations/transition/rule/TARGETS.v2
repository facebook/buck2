load(":rules.bzl", "my_little_iphone_binary", "my_watchos_resource", "my_default_resource")

prelude = native

prelude.constraint_setting(
    name = "os",
)

prelude.constraint_value(
    name = "watchos",
    constraint_setting = ":os",
)

prelude.constraint_value(
    name = "iphoneos",
    constraint_setting = ":os",
)

prelude.platform(
    name = "iphoneos-p",
    constraint_values = [
        ":iphoneos",
    ],
)

my_watchos_resource(
    name = "watchos-resource",
    # This target should be transitioned to watchos because this is what rule does.
    resource_value = select({
        ":watchos": "watchos",
        "DEFAULT": "DEFAULT",
    }),
)

my_default_resource(
    name = "default-resource",
    # This target should be transitioned to watchos because this is what rule does.
    resource_value = select({
        ":watchos": "watchos",
        "DEFAULT": "DEFAULT",
    }),
)

my_little_iphone_binary(
    name = "the-test",
    default_target_platform = ":iphoneos-p",
    resources = [
        ":watchos-resource",
        ":default-resource",
    ],
)
