def _impl(ctx):
    outputs = []
    for value in ctx.build(ctx.cli_args.target).values():
        outputs.extend(ctx.output.ensure_multiple(value.artifacts()))

    ctx.output.print(sep = "\n", *outputs)

build_test = bxl(
    implementation = _impl,
    cli_args = {
        "target": cli_args.target_label(),
    },
)

