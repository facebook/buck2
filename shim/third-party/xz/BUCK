pkgconfig_system_library(
    name = "lzma",
    packages = {
        "//os:linux-fedora": ["xz-devel"],
        "//os:linux-ubuntu": ["liblz4-dev"],
        "//os:macos-homebrew": ["liblzma"],
    },
    pkgconfig_name = "liblzma",
)
